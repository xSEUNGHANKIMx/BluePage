<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.bluepage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_list_item_contact_height"
    android:background="@drawable/contacts_list_item_ripple"
    android:baselineAligned="false"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="85dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="3dp" >

        <ImageView
            android:id="@id/contacts_item_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_checkbox_selector" />

        <com.example.bluepage.utils.CircularImageView
            android:id="@id/contacts_item_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            app:border="true"
            app:border_color="@color/GrayLight"
            app:border_width="0.3dp"
            app:shadow="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.example.bluepage.utils.CustomTextView
            android:id="@id/contacts_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/contacts_list_item_contact_name_text_color"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <com.example.bluepage.utils.CustomTextView
                android:id="@id/contacts_item_number_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_1dp"
                android:ellipsize="end"
                android:paddingBottom="1dp"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <com.example.bluepage.utils.CustomTextView
                xmlns:custom="http://schemas.android.com/apk/res/com.example.bluepage"
                android:id="@id/contacts_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ellipsize="end"
                android:textColor="@color/contacts_list_item_contact_number_text_color"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
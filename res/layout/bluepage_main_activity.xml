<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/bluepage_contacts_actionbar" />

            <com.example.bluepage.views.BluePageTabWidget
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contacts_tab_height"
                android:background="@drawable/im_ripple" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/contacts_search_layout"
                tools:context=".MainActivity" />

        </LinearLayout>
    </TabHost>

</LinearLayout>
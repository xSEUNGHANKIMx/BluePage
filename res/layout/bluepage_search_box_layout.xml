<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/contacts_search_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_search_height"
    android:layout_below="@id/contacts_tab_layout"
    android:background="@color/contacts_search_background_color"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contacts_search_edittext_height"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/img_field_search"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/contacts_search_left_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_search" />

        <EditText
            android:id="@id/contacts_search_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/contacts_edit_search_hint"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:singleLine="true"
            android:textColor="@color/contacts_search_text_color"
            android:textColorHint="@color/contacts_search_text_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="18dp" />

        <ImageView
            android:id="@id/contacts_search_right_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/im_ripple"
            android:scaleType="fitXY"
            android:src="@drawable/btn_delete"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
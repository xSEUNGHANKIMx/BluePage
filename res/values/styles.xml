<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="phone_key_type_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keypad_font_size</item>
        <item name="android:textColor">@color/keypad_font_color</item>
    </style>

    <style name="phone_key_type_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keypad_font_size_small</item>
        <item name="android:textColor">@color/keypad_font_color_small</item>
    </style>

    <style name="phone_key_type_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keypad_font_size_normal</item>
        <item name="android:textColor">@color/keypad_font_color</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MySpinnerItem" parent="android:Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MyTextAppearanceSpinnerItem</item>
    </style>

    <style name="MyTextAppearanceSpinnerItem" parent="android:TextAppearance.Holo.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogSpinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItem</item>
    </style>

</resources>